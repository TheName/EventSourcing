<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>netstandard2.0</TargetFramework>
        <TreatWarningsAsErrors Condition=" '$(Configuration)' == 'Release' ">true</TreatWarningsAsErrors>
        <GenerateDocumentationFile>true</GenerateDocumentationFile>
        <RootNamespace>EventSourcing.ForgettablePayloads.Extensions.DatabaseMigrations.Persistence.PostgreSql</RootNamespace>
        <AssemblyName>EventSourcing.ForgettablePayloads.Extensions.DatabaseMigrations.Persistence.PostgreSql</AssemblyName>
    </PropertyGroup>

    <!-- NuGet metadata -->
    <PropertyGroup>
        <Title>EventSourcing.ForgettablePayloads.Extensions.DatabaseMigrations.Persistence.PostgreSql</Title>
        <Description>This package contains database migration scripts for PostgreSql implementation of EventSourcing.ForgettablePayloads.Persistence package.</Description>
        <Authors>Dawid Szmidka</Authors>
        <PackageId>EventSourcing.ForgettablePayloads.Extensions.DatabaseMigrations.Persistence.PostgreSql</PackageId>
        <Version>0.1.0-alpha</Version>
        <PackageReleaseNotes>
            - Initial version of EventSourcing.ForgettablePayloads.Extensions.DatabaseMigrations.Persistence.PostgreSql project
        </PackageReleaseNotes>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <PackageTags>EventSourcing;EventSourcing.ForgettablePayloads.Extensions;EventSourcing.ForgettablePayloads.Extensions.DatabaseMigrations;EventSourcing.ForgettablePayloads.Extensions.DatabaseMigrations.Persistence</PackageTags>
        <IncludeSymbols>true</IncludeSymbols>
        <SymbolPackageFormat>snupkg</SymbolPackageFormat>
        <IncludeSource>true</IncludeSource>
        <RepositoryUrl>https://github.com/TheName/EventSourcing</RepositoryUrl>
    </PropertyGroup>

    <ItemGroup>
        <EmbeddedResource Include="Scripts\*.sql" />
    </ItemGroup>

</Project>
